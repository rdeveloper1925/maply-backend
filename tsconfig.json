{
    "compilerOptions": {
        "target": "ES2022",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "noEmit": false,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "outDir": "./dist",
        "rootDir": "./src",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@config/*": [
                "./src/config/*"
            ],
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@middlewares/*": [
                "./src/middlewares/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@types/*": [
                "./src/types/*"
            ]
        }
    },
    "include": [
        "src",
        "src/types/**/*.d.ts",
        "vite.config.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
